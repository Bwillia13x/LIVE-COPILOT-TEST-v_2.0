{
  "name": "voice-notes-pro",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 4173",
    "analyze": "npx vite-bundle-analyzer",
    "lint": "echo 'Linting not configured' && exit 0",
    "type-check": "tsc --noEmit",
    "deploy": "./deploy.sh",
    "deploy:netlify": "./deploy.sh --platform netlify",
    "deploy:vercel": "./deploy.sh --platform vercel",
    "health-check": "curl -f http://localhost:4173 || exit 1",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google/genai": "^0.8.0",
    "chart.js": "^4.4.9",
    "mammoth": "^1.9.1",
    "marked": "^4.0.0",
    "pdfjs-dist": "^5.2.133",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/marked": "^4.0.8",
    "@types/node": "^22.14.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "jsdom": "^24.1.1"
  }
}
